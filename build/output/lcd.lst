00000Ar 1  29 0F          and #%00001111
00000Cr 1  8D rr rr       sta VIA_PORTB
00000Fr 1  9C rr rr       stz LCD_RS_ENABLE  ;LCD_RS_ENABLE should be false
000012r 1  60             rts
