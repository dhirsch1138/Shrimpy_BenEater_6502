000001r 1               .macro  lcd_wait_macro
000001r 1               ;Description
000001r 1               ;  Loops until the LCD no longer shows a busy status
000001r 1               ;Arguments
000001r 1               ;  None
000001r 1               ;Preconditions
000001r 1               ;  LCD is initialized and has its parameters set
000001r 1               ;  LCD is in 4 bit mode
000001r 1               ;Side Effects
000001r 1               ;  None
000001r 1                 .local lcd_wait_busy ;limit scope of this symbol to this macro
000001r 1                 pha
000001r 1                 lda #%11110000  ; LCD data is input
000001r 1                 sta VIA_DDRB
000001r 1               lcd_wait_busy:
000001r 1                 lda #LCD_4BIT_RW
000001r 1                 sta VIA_PORTB
000001r 1                 lda #(LCD_4BIT_RW | LCD_4BIT_E)
000001r 1                 sta VIA_PORTB
000001r 1                 lda VIA_PORTB       ; Read high nibble
000001r 1                 pha             ; and put on stack since it has the busy flag
000001r 1                 lda #LCD_4BIT_RW
000001r 1                 sta VIA_PORTB
000001r 1                 lda #(LCD_4BIT_RW | LCD_4BIT_E)
000001r 1                 sta VIA_PORTB
000001r 1                 ;TODO is this lda doing anything? seems like it is superceded immediately by the pla.
000001r 1                 ;unless reading from the via port triggers something on the lcd?
000001r 1                 lda VIA_PORTB       ; Read low nibble
000001r 1                 pla             ; Get high nibble off stack
000001r 1                 and #%00001000
000001r 1                 bne lcd_wait_busy
000001r 1                 ; logical break, we aren't busy anymore
000001r 1                 lda #LCD_4BIT_RW
000001r 1                 sta VIA_PORTB
000001r 1                 lda #%11111111  ; LCD data is output
000001r 1                 sta VIA_DDRB
000001r 1                 pla
000001r 1               .endmacro
